extends layout

block content
	link(rel='stylesheet', href='/stylesheets/index.css')


	div.container.text-center
		div.newgame.well
			h2 New Game
			form(name="start-new-game", action="/play/start", method="POST")
				label
					input(id="player1", name="player1", type="text", placeholder="Player 1")
					span Player 1
				label
					input(id="player2", name="player2", type="text", placeholder="Player 2")
					span Player 2
				label
					input(id="password", name="password", type="text", placeholder="Password")
					span Password
				div.actions
					input(type="submit", value="Begin")

	div.well#buttons
		div.my-button(onclick="location.href='/play/current'") View Current Game
		div.my-button(onclick="location.href='/play/score'") Score Current Game
	div.well#leaderboard
		h2.record 

	// GAME LIST
	div.well#gameList
		h2 Game list
		table.center
			thead
				th time
				th player1
				th score1
				th player2
				th score2
				th status
			tbody
		// GAME LIST
block script
	script(src='/javascripts/index.js')
	script(src='/javascripts/tablefill.js')